<NavigationWindow x:Class="LanguageTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageTrainer"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" Height="200"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Topmost="True"
        Style="{DynamicResource WindowStyle}" ShowsNavigationUI="False">
    <Window.Resources>
        <Style TargetType="Hyperlink" BasedOn="{StaticResource HyperlinkStyle}"/>
    </Window.Resources>
    <Window.Clip>
        <RectangleGeometry Rect="0,0,400,200" RadiusX="5" RadiusY="5"/>
    </Window.Clip>
</NavigationWindow>
